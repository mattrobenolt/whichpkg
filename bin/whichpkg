#!/usr/bin/env python

__version__ = '0.2.0'


if __name__ == '__main__':
    import sys

    if len(sys.argv) == 1:
        sys.exit(0)

    failed = False

    for pkg in sys.argv[1:]:
        try:
            sys.stdout.write(__import__(pkg).__path__[0])
            sys.stdout.write('\n')
        except ImportError:
            sys.stdout.write('{0} not found\n'.format(pkg))
            failed = True

    if failed:
        sys.exit(1)
    sys.exit(0)
